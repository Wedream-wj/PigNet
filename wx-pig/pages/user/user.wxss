.avatar-class {
    margin-left: 5%;
}

.van-cell {
    margin-top: 5px;
    background-color:thistle !important;
}

.logout-btn {
    margin-top: 10%;
    width: 90%;
    border-radius: 10px;
}

.UCenter-bg {
    background-image: url(https://wximage-1251091977.cos.ap-beijing.myqcloud.com/xai/summer.jpeg);
    background-size: cover;
    height: 550rpx;
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  }
  
  .UCenter-bg text {
    opacity: 0.8;
  }
  
  .UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
  }
  
  .UCenter-bg .gif-wave{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;  
    height: 100rpx;   
  }
  
  map,.mapBox{
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;  
    height: 100rpx;   
  }
  
  map,.mapBox{
    width: 750rpx;
    height: 300rpx;
  }
  .user-img {
    width: 250rpx;
    height: 250rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-top: 100rpx;
    justify-content: center;
  }
  .reason_txt{
    font-size: 32rpx;
    color: #1AA0E1;
    display: table;
    width: auto;
    white-space: nowrap;
    border-spacing: 0.5rem 0;
    margin-left: 28rpx;
    margin-right: 28rpx;
    margin-top: 28rpx;
  }
  .reason_txt::before,.reason_txt::after{
    display: table-cell;
    content: "";
    width: 50%;
    background: linear-gradient(#1AA0E1, #1AA0E1) repeat-x center;
    background-size: 0.1rem 0.1rem;
  }